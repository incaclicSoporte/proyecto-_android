<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jamear">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />-->

    <application
        android:name="apps.incaclic.jamear.ClasesLogin.JamearApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="apps.incaclic.jamear.SplashScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="apps.incaclic.jamear.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="apps.incaclic.jamear.LoginActivity"
            android:configChanges="orientation"
            android:parentActivityName="apps.incaclic.jamear.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LoginToolbar"></activity>
        <activity
            android:name="apps.incaclic.jamear.PerfilActivity"
            android:configChanges="orientation"
            android:parentActivityName="apps.incaclic.jamear.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.perfilsintoolbar" />

        <activity
            android:name="apps.incaclic.jamear.CarritoActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:parentActivityName="apps.incaclic.jamear.MainActivity"
            android:theme="@style/CarritoToolbar"/>
    </application>

</manifest>