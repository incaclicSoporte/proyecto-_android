<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imvCerrarEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_equis"
        android:layout_marginTop="7dp"
        android:layout_marginRight="30dp"
        android:elevation="5dp"
        android:layout_alignParentRight="true"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/celeste_new"
                android:text="Editar Perfil"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="@color/celeste_new"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tetNomE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/celeste_new"
                    android:hint="Nombre"
                    android:textColor="@color/letra_new"
                    android:maxLength="50"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:textColorHint="@color/celeste_new"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tetApPE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="50"
                        android:textColor="@color/letra_new"
                        android:imeOptions="actionNext"
                        android:inputType="textAutoComplete"
                        android:textColorHint="@color/celeste_new"
                        android:hint="Ap. Paterno" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:textColorHint="@color/celeste_new"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tetApME"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="50"
                        android:textColor="@color/letra_new"
                        android:imeOptions="actionNext"
                        android:inputType="textAutoComplete"
                        android:textColorHint="@color/celeste_new"
                        android:hint="Ap. Materno" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:textColorHint="@color/celeste_new"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tetTlfE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textColor="@color/letra_new"
                        android:textColorHint="@color/celeste_new"
                        android:hint="Celular" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:textColorHint="@color/celeste_new"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tetDniE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="8"
                        android:enabled="false"
                        android:textColor="@color/letra_new"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textColorHint="@color/celeste_new"
                        android:hint="DNI" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="@color/celeste_new"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tetDirE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="150"
                    android:textColor="@color/letra_new"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:textColorHint="@color/celeste_new"
                    android:hint="DirecciÃ³n (ejm los portales - puente piedra)" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="@color/celeste_new"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tetCorE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="150"
                    android:textColor="@color/letra_new"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/celeste_new"
                    android:hint="Correo Electronico" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnEditarE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes"
                android:textColorHint="#ffffff"
                android:textSize="20sp"
                android:backgroundTint="@color/celeste_new"
                android:hint="Confirmar"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
